<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnToast2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="31dp"
        android:text="Toast 2"
        app:layout_constraintStart_toStartOf="@+id/btnToast1"
        app:layout_constraintTop_toBottomOf="@+id/btnToast1" />

    <Button
        android:id="@+id/btnToast3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp"
        android:text="Toast 3"
        app:layout_constraintStart_toStartOf="@+id/btnToast2"
        app:layout_constraintTop_toBottomOf="@+id/btnToast2" />

    <Button
        android:id="@+id/btnsnackbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="Snackbar"
        app:layout_constraintStart_toStartOf="@+id/btnToast3"
        app:layout_constraintTop_toBottomOf="@+id/btnToast3" />

    <Button
        android:id="@+id/btnToast1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="137dp"
        android:layout_marginTop="120dp"
        android:text="Toast 1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>